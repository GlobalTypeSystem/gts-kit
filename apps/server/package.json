{
  "name": "@gts/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index-cli.ts",
    "start": "node dist/index-cli.js",
    "build": "tsc -b tsconfig.json",
