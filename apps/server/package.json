  },
  "dependencies": {
    "@gts/shared": "*",
    "sql.js": "^1.12.0",
    "express": "4.19.2",
    "cors": "2.8.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.5",
    "@types/express": "4.17.21",
    "@types/cors": "2.8.17",
    "@types/node": "20.11.30",
    "tsx": "4.7.0"
  }
}
